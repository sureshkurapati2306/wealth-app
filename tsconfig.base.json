{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@cimb/common": ["libs/common/src/index.ts"],
            "@cimb/core": ["libs/core/src/index.ts"],
            "@cimb/mint": ["libs/mint/src/index.ts"],
            "@cimb/mint-office": ["libs/mint-office/src/index.ts"],
            "@cimb/shared/assets": ["libs/shared/assets/src/index.ts"],
            "@cimb/shared/models": ["libs/shared/models/src/index.ts"],
            "@cimb/shared/services": ["libs/shared/services/src/index.ts"],
            "@cimb/shared/states": ["libs/shared/states/src/index.ts"],
            "@cimb/shared/styles": ["libs/shared/styles/src/index.ts"],
            "@env/self-serve/*": ["apps/self-serve/src/environments/*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
